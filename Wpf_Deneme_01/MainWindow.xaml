<Window x:Class="Wpf_Deneme_01.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="UDP Communication App" Height="450" Width="800">
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="*" />
            <ColumnDefinition Width="*" />
        </Grid.ColumnDefinitions>

        <ListBox x:Name="incomingMessagesListBox" Grid.Column="0" />
        <ListBox x:Name="outgoingMessagesListBox" Grid.Column="1" />

        <TextBox x:Name="messageTextBox" Grid.Column="0" Margin="10" VerticalAlignment="Bottom" />
        <Button Content="Send" Grid.Column="1" Margin="10" VerticalAlignment="Bottom" Click="SendButton_Click" />
    </Grid>
</Window>
